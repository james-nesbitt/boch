#!/bin/sh
#
# HOOK->FEATURE->UPDATE->PRE->300 Convert arguments to variables
#

hook_version=2
hook_root="hook_feature_update_pre_300"

# description method
hook_feature_update_pre_300_description()
{
  echo "Convert arguments to variables"
}

# Help method
hook_feature_update_pre_300_help()
{
  echo "HOOK->FEATURE->UPDATE->PRE->300 Convert arguments to variables

"
}

# execute method
hook_feature_update_pre_300_execute()
{

  local flags=""
  while [ $# -gt 0 ]
  do
    case "$1" in
      *)
        break;
    esac
    shift
  done

  # set up the feature name
  feature_name="${feature_name:-${1}}"

  if [ -z "${feature_name}" ]; then
    message "No feature name provided, cannot update the feature"
    debug --level 5 --topic "FEATURE->UPDATE" "No feature name provided, halting feature update process"
    return 1
  fi

  # maybe load the feature in case it isn't loaded
  feature_load "${feature_name}"

  if [ $? -gt 0 ]; then
    message "No matching feature found, cannot update the feature"
    debug --level 5 --topic "FEATURE->UPDATE" "No mathing feature provided, halting feature update process [feature:${feature_name}]"
    return 1
  fi

  feature=`libraries_list_get "${feature_name}"`
  feature_path=`library_path "${feature}"`
}
