#!/bin/sh
#
# Flow Library
#

# list all flows in the system
flows_getflows()
{
  local flow_path=""
  local flow=""
  local allpaths="`libraries_list_subpath \"hooks/flow\"`"
  for flow_path in ${allpaths}; do
    for flow in ${flow_path}/*; do
      echo "${flow}"
    done
  done
}

# determing if a flow exists
flow_exists()
{
  local flow="$1"

  case " `flows_getflows` " in
    *" ${flow}:"*)
      return 0
    ;;

    *)
      return 1
    ;;
  esac
}
